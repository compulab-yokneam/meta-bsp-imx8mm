+u32 cl_eeprom_get_subind(void);
+u32 cl_eeprom_set_subind(u32 subind);
 
 u32 cl_eeprom_get_osize(void);
 
@@ -55,17 +57,24 @@ struct lpddr4_desc {
 	 * use it if default is not the
 	 * 1-st array entry */
 	unsigned int _default;
