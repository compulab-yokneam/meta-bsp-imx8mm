+		return 0;
+
+	return board_osize;
+};
+
+u32 cl_eeprom_set_osize(u32 osize)
+{
+	if (cl_eeprom_write(BOARD_OSIZE_OFFSET, (uchar *)&osize, BOARD_OSIZE_SIZE))
+		return 0;
+
+	board_osize = osize;
+
+	return board_osize;
+};
