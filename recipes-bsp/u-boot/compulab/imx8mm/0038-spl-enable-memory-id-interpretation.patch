+	if (cl_eeprom_write(DRATE_OFFSET(r,c), (uchar *)&drate, BOARD_DRATE_SIZE))
+		return 0;
+
+	board_drate = drate;
+
+	udelay(5000);
+
+	return board_drate;
+};
+
